@model DyasCsrs.ViewModels.VentaVM

@{
    Layout = "~/Views/Shared/_LyVendedor.cshtml";
    ViewBag.Title = "Registrar Venta";
}

<h2>Registrar Venta</h2>

<!-- Buscar cliente -->
<form method="post">
    <input type="hidden" name="accion" value="buscar" />
    <label>DNI:</label>
    <input asp-for="Cliente.DNI" />
    <button type="submit">Buscar</button>
</form>

<!-- Crear cliente si no se encontró -->
@if (!string.IsNullOrEmpty(Model.Cliente?.DNI) && Model.Cliente.Id == 0)
{
    <form method="post">
        <input type="hidden" name="accion" value="crearCliente" />
        <input type="hidden" asp-for="Cliente.DNI" />
        <h4>Cliente no encontrado. Crear nuevo:</h4>
        <div>
            <label>Nombre:</label>
            <input asp-for="Cliente.Nombre" />
        </div>
        <div>
            <label>Teléfono:</label>
            <input asp-for="Cliente.Telefono" />
        </div>
        <div>
            <label>Dirección:</label>
            <input asp-for="Cliente.Direccion" />
        </div>
        <button type="submit">Guardar Cliente</button>
    </form>
}
else if (Model.Cliente?.Id > 0)
{
    <h4>Cliente: @Model.Cliente.Nombre</h4>

    <!-- Formulario para agregar producto -->
    <form method="post">
        <input type="hidden" name="accion" value="agregarDetalle" />
        <input type="hidden" asp-for="Cliente.Id" />
        <input type="hidden" asp-for="ClienteId" />
        <input type="hidden" asp-for="Cliente.DNI" />
        <input type="hidden" asp-for="Cliente.Nombre" />
        <input type="hidden" asp-for="Cliente.Telefono" />
        <input type="hidden" asp-for="Cliente.Direccion" />

        <!-- Seleccionar producto y cantidad -->
        <label>Producto:</label>
        <select asp-for="ProductoId">
            @foreach (var p in Model.ProductoMotos)
            {
                <option value="@p.Id">@p.Marca - @p.Modelo</option>
            }
        </select>

        <label>Cantidad:</label>
        <input asp-for="DetallesTempCantidad" type="number" min="1" value="1" />

        @for (int i = 0; i < Model.Detalles.Count; i++)
        {
            <input type="hidden" name="Detalles[@i].ProductoMoto.Id" value="@Model.Detalles[i].ProductoMoto.Id" />
            <input type="hidden" name="Detalles[@i].Cantidad" value="@Model.Detalles[i].Cantidad" />
            <input type="hidden" name="Detalles[@i].PrecioUnitario" value="@Model.Detalles[i].PrecioUnitario" />
            <input type="hidden" name="Detalles[@i].SubTotal" value="@Model.Detalles[i].SubTotal" />
        }


        <button type="submit">Agregar Detalle</button>
    </form>

    <!-- Tabla de detalles acumulados -->
    <h5>Detalles actuales:</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio U.</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.Detalles)
            {
                var p = Model.ProductoMotos.FirstOrDefault(prod => prod.Id == d.ProductoMoto.Id);
                <tr>
                    <td>@(p?.Marca ?? "-") - @(p?.Modelo ?? "-")</td>
                    <td>@d.Cantidad</td>
                    <td>@d.PrecioUnitario.ToString("F2")</td>
                    <td>@d.SubTotal.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Registrar venta final -->
    <form method="post">
        <input type="hidden" name="accion" value="registrarVenta" />
        <input type="hidden" asp-for="Cliente.Id" />
        <input type="hidden" asp-for="ClienteId" />
        <select asp-for="MetodoPagoId" asp-items="@(new SelectList(Model.MetodosPago, "Id", "Nombre"))"></select>

        @for (int i = 0; i < Model.Detalles.Count; i++)
        {
            <input type="hidden" name="Detalles[@i].ProductoMoto.Id" value="@Model.Detalles[i].ProductoMoto.Id" />
            <input type="hidden" name="Detalles[@i].Cantidad" value="@Model.Detalles[i].Cantidad" />
        }

        <button type="submit">Registrar Venta</button>
    </form>
}

<hr />

<h3>Historial de Ventas</h3>
<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Total</th>
            <th>Productos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model.Ventas)
        {
            <tr>
                <td>@venta.Fecha</td>
                <td>@venta.Cliente?.Nombre</td>
                <td>@venta.Total.ToString("F2")</td>
                <td>
                    @foreach (var d in venta.Detalles)
                    {
                        <div>@d.ProductoMoto.Marca - @d.ProductoMoto.Modelo</div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
