@model DyasCsrs.ViewModels.VentaVM

@{
    Layout = "~/Views/Shared/_LyVendedor.cshtml";
    ViewBag.Title = "Registrar Venta";
}



<h2>Registrar Venta</h2>

<!-- Buscar cliente -->
<form method="post">
    <input type="hidden" name="accion" value="buscar" />
    <label>DNI:</label>
    <input asp-for="Cliente.DNI" />
    <button type="submit">Buscar</button>
</form>

<!-- Crear cliente si no se encontró -->
@if (!string.IsNullOrEmpty(Model.Cliente?.DNI) && Model.Cliente.Id == 0)
{
    <form method="post">
        <input type="hidden" name="accion" value="crearCliente" />
        <h4>Cliente no encontrado. Crear nuevo:</h4>
        <input asp-for="Cliente.DNI" readonly />
        <div>
            <label>Nombre:</label>
            <input asp-for="Cliente.Nombre" />
        </div>
        <div>
            <label>Teléfono:</label>
            <input asp-for="Cliente.Telefono" />
        </div>
        <div>
            <label>Dirección:</label>
            <input asp-for="Cliente.Direccion" />
        </div>
        <button type="submit">Guardar Cliente</button>
    </form>
}
else if (Model.Cliente?.Id > 0)
{
    <h4>Cliente: @Model.Cliente.Nombre</h4>

    <!-- Registrar venta -->
    <form method="post">
        <input type="hidden" name="accion" value="registrarVenta" />
        <input type="hidden" asp-for="ClienteId" />

        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 2; i++) // puedes usar más o hacerlo dinámico
                {
                    <tr>
                        <td>
                            <select name="Detalles[@i].ProductoMoto.Id">
                                @foreach (var p in Model.ProductoMotos)
                                {
                                    <option value="@p.Id">@p.Marca - @p.Modelo</option>
                                }
                            </select>
                        </td>
                        <td>
                            <input name="Detalles[@i].Cantidad" type="number" min="1" value="1" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <label>Método de pago:</label>
        <select asp-for="MetodoPagoId" asp-items="@(new SelectList(Model.MetodosPago, "Id", "Nombre"))"></select>

        <button type="submit">Registrar Venta</button>
    </form>

}

<hr />

<h3>Historial de Ventas</h3>
<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Total</th>
            <th>Productos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model.Ventas)
        {
            <tr>
                <td>@venta.Fecha</td>
                <td>@venta.Cliente?.Nombre</td>
                <td>@venta.Total</td>
                <td>
                    @foreach (var d in venta.Detalles)
                    {
                        <div>@d.ProductoMoto.Marca - @d.ProductoMoto.Modelo</div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
